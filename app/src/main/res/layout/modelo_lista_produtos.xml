<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/lst_produto_qtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QTD"
        android:layout_alignParentStart="true"
        android:layout_margin="5sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/lst_produto_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOME"
        android:layout_toRightOf="@id/lst_produto_qtd"
        android:layout_toLeftOf="@id/lst_produto_preco_und"
        android:layout_alignTop="@id/lst_produto_qtd"
        android:layout_alignBottom="@id/lst_produto_qtd"
        android:layout_marginEnd="5sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/lst_produto_preco_und"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRECO_UND"
        android:layout_toLeftOf="@id/lst_produto_preco_total"
        android:layout_alignTop="@id/lst_produto_qtd"
        android:layout_alignBottom="@id/lst_produto_qtd"
        android:layout_marginEnd="10sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/lst_produto_preco_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRECO_TOTAL"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/lst_produto_qtd"
        android:layout_alignBottom="@id/lst_produto_qtd"
        android:layout_marginEnd="5sp"
        android:textStyle="bold"/>

</RelativeLayout>