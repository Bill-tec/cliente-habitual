<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/ic_calendar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/popup_data_edittext"
        android:layout_alignTop="@id/popup_data_edittext"
        android:layout_alignBottom="@id/popup_data_edittext"/>
    <EditText
        android:id="@+id/popup_data_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="DIA/MÃŠS/ANO"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:inputType="numberDecimal"/>
    <Button
        android:id="@+id/btn_pupup_data_dalvar"
        android:text="Salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="15sp"
        android:layout_below="@+id/popup_data_edittext"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewBannerData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/btn_pupup_data_dalvar"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>