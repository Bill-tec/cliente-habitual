<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/search_icon"
        android:src="@drawable/ic_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/mainPesquisa"
        android:layout_alignBottom="@id/mainPesquisa"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/mainPesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pesquise seu cliente..."
        android:inputType="textFilter"
        android:layout_toRightOf="@id/search_icon"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:maxLength="20"/>
    <ListView
        android:id="@+id/mainLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_tabela"
        android:scrollbars="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10sp"
        android:layout_above="@+id/adViewBanner"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_nova_inadimplencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mainLista"
        android:layout_alignRight="@id/mainLista"
        android:layout_margin="5sp"
        android:src="@drawable/ic_add"/>
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="1"
        android:padding="10sp"
        android:alignmentMode="alignBounds"
        android:layout_below="@id/mainPesquisa"
        android:id="@+id/grid_tabela"
        >
        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:text="Cliente"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center|right"
            android:layout_marginRight="45sp"
            android:text="Divida"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/data_pagamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="12dp"
            android:text="Pagamento"
            android:textColor="#000000"
            />
    </GridLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>