<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActivityInadimplencia" android:background="#f8f8ff">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:layout_toLeftOf="@id/cliente_nome"
        android:layout_alignTop="@id/cliente_nome"
        android:layout_alignBottom="@id/cliente_nome"/>
    <TextView
        android:id="@+id/cliente_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="30dp"
        android:text="Cliente"
        android:textColor="#000000"/>
    <ImageView
        android:id="@+id/money_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_money_icon"
        android:layout_alignTop="@+id/total_inadimplencia"
        android:layout_alignBottom="@id/total_inadimplencia"
        android:layout_toLeftOf="@id/total_inadimplencia"
        />
    <TextView
        android:id="@+id/total_inadimplencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="TOTAL R$"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cliente_nome"
        android:textColor="#000000"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/atualizar_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/table_datas"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        />
    <RadioGroup
        android:id="@+id/radio_group"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/atualizar_textview"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <RadioButton
            android:id="@+id/RB_acrescentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acrescentar"
            android:textColor="#000000"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/RB_descontar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descontar"
            android:textColor="#000000"/>

    </RadioGroup>
    <LinearLayout
        android:id="@+id/linear_entrada"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/radio_group">
        <ImageView
            android:src="@drawable/ic_money_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/valor_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00.00"
            android:inputType="numberDecimal"
            android:maxLength="8"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_below="@id/linear_entrada"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_above="@+id/adViewBannerInad"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:src="@drawable/ic_check"
        android:id="@+id/fab_quitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fab_menu_expand"
        android:layout_above="@id/fab_menu_expand"
        app:fabSize="mini"
        android:layout_margin="10dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/title_quitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitar"
        android:layout_toLeftOf="@+id/fab_quitar"
        android:layout_alignTop="@id/fab_quitar"
        android:layout_alignBottom="@id/fab_quitar"
        android:gravity="center"
        android:textColor="#000000"
        android:visibility="invisible"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_produtos"
        android:src="@drawable/ic_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/fab_quitar"
        android:layout_above="@id/fab_quitar"
        app:fabSize="mini"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/title_produtos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add produtos"
        android:textColor="#000000"
        android:layout_toLeftOf="@id/fab_produtos"
        android:layout_alignTop="@id/fab_produtos"
        android:layout_alignBottom="@id/fab_produtos"
        android:layout_alignRight="@id/title_quitar"
        android:gravity="center"
        android:visibility="invisible"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_nova_inad"
        android:src="@drawable/ic_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fab_menu_expand"
        android:layout_toLeftOf="@id/fab_menu_expand"
        app:fabSize="mini"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/title_nova_inad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova inadimplÃªncia"
        android:textColor="#000000"
        android:layout_toLeftOf="@id/fab_nova_inad"
        android:layout_alignTop="@id/fab_nova_inad"
        android:layout_alignBottom="@id/fab_nova_inad"
        android:gravity="center"
        android:visibility="invisible"/>


    <ImageView
        android:id="@+id/calendar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar_icon"
        android:layout_alignStart="@id/table_datas"
        android:layout_alignEnd="@id/table_datas"
        android:layout_below="@id/total_inadimplencia"
        android:layout_marginTop="15dp"

        />
    <TableLayout
        android:id="@+id/table_datas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendar_icon"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:orientation="horizontal"
        android:background="#000000">
        <TableRow
            android:background="#000000"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textAlignment="center"
                android:textSize="20dp"
                android:background="#f8f8ff"
                android:textColor="#000000"
                android:layout_margin="2dp"/>
            <TextView
                android:id="@+id/data_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:background="#f8f8ff"
                android:textColor="#000000"/>
        </TableRow>
        <TableRow android:background="#000000" android:layout_margin="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Pagamento"
                android:background="#f8f8ff"
                android:textColor="#000000"
                android:layout_margin="2dp"/>
            <TextView
                android:id="@+id/data_pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:background="#f8f8ff"
                android:textColor="#000000"
                android:layout_margin="2dp"
                android:text="SEM DATA"/>
        </TableRow>
    </TableLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewBannerInad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>

